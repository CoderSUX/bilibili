/* pages/detail/detail.wxss */
/* 视频详情 */
.video-detail-wrap{
  padding: 10rpx;
}

.video-content{
  width: 100%;
}

.video-title{
  font-size: 30rpx;
  color: #666;
}

.video-info{
  font-size: 24rpx;
}
.author{
  color: #666;
}
.video-info text{
  margin-right: 15rpx;
}
.playCount{
  color: #999;
}

.commentCount{
  color: #999;
}
.date{
  color: #999;
}

/* 推荐视频 */
.other-wrap{
  padding: 30rpx;
}
.other-video{
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
}
.other-video-image{
  /* flex: 3; */
  width: 38%;
  
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.other-video-info{
  /* flex: 6; */
  width: 60%;

  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  
}
.other-video-title{
  color: pink;
  font-size: 26rpx;
}
.other-info{
  color: #999;
  font-size: 24rpx;
  
}

/* 评论列表 */
.comment-wrap{
  padding: 15rpx;
  color: black;
}
.comment-title{
  font-size: 32rpx;
}

.comment-item{
  border-bottom: 2rpx solid #999;
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;

}
.user-icon{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.user-icon image{
  width: 60%;
  border-radius: 50%;
}

.user-info{
  flex: 5;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.user-info-detail{
  display: flex;
  justify-content: space-between;
}
.user-info-detail .user-name{
  font-size: 28rpx;
  color: #999;
}
.user-info-detail .comment-date{
  font-size: 24rpx;
  color: #999;
}
.comment-info-title{
  font-size: 28rpx;
  color: #666;
}